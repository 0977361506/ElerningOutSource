<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>


    <definition name="user.definition"
                template="/WEB-INF/views/user/layout.jsp">
        <put-attribute name="head"
                       value="/WEB-INF/views/user/layout/head.jsp"/>
        <put-attribute name="menu"
                       value="/WEB-INF/views/user/layout/menu.jsp"/>
        <put-attribute name="footer"
                       value="/WEB-INF/views/user/layout/footer.jsp"/>

        <put-attribute name="body" value=""/>
    </definition>

    <definition name="user/*/*" extends="user.definition">
        <put-attribute name="body"
                       value="/WEB-INF/views/user/{1}/{2}.jsp"/>
    </definition>



</tiles-definitions>
